@using Kontakt.App.Models;
@model List<Category>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">ParentName</th>
                <th scope="col">Map</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@item.CategoryId</th>
                    <th>@item.Name</th>
                    @if (item.ParentCategoryId != null)
                        {
                        <th>@item.ParentCategory.Name</th>
                    }
                    else{

                        <th>    -</th>
                        }

                    @{
                        List<string> maps = new List<string>();

                        maps.Add(item.Name);
                    }
                    
                        @if (item.ParentCategoryId != null)
                    {

                        var currentItem = item; // Create a copy of the current item
                        while (currentItem.ParentCategoryId != null)
                        {
                            currentItem = currentItem.ParentCategory; // Move to the parent category
                            maps.Add(currentItem.Name);
                        }
                        
                    }
                   
                        <th>
                        @for(var i = maps.Count - 1; i >= 0; i--)
                        {
                            if (i != 0)
                            {
                                <text> @maps[i] -></text>
                            }
                            else
                            {            
                            <text> @maps[i] </text>
                            }
                        }
                       
                    </th>

             






                    <td><a asp-controller="category" asp-action="update" asp-route-id="@item.CategoryId"><i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a onclick="if (!confirm('Are you sure to delete?')){return false;}" asp-controller="category" asp-action="delete" asp-route-id="@item.CategoryId" class="delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
    <div>
        <a asp-controller="category" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%"> <div style="width:100%; " class="btn btn-outline-success">Create Category </div></a>
    </div>

</div>
