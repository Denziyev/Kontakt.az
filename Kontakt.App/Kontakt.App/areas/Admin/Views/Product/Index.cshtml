@using Kontakt.App.Models;
@using Kontakt.Service.Responses;
@model MvcResponse<List<Product>>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">StockNumber</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {

                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.Name</th>
                    <th>@item.Price</th>
                    <th>@item.Category</th>
                    <th>@item.StockNumber</th>


                    <td><a asp-controller="product" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a onclick="if (!confirm('Are you sure to delete?')){return false;}" asp-controller="product" asp-action="delete" asp-route-id="@item.Id" class="delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
    <div>
        <a asp-controller="product" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%"> <div style="width:100%; " class="btn btn-outline-success">Create Product </div></a>
    </div>

</div>