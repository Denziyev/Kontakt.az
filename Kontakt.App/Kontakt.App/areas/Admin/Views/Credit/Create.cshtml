@using Kontakt.Core.Models;
@model Credit
<div class="container">
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post">
        <div class="form-group">
            <label for="percent">Percent</label>
            <input type="number" class="form-control" asp-for="@Model.Percent">
            <span class="alert-danger" asp-validation-for="@Model.Percent"></span>
        </div>
        <div class="form-group">
            <label for="NumberofMonths">NumberofMonths</label>
            <input type="number" class="form-control" asp-for="@Model.NumberofMonths">
            <span class="alert-danger" asp-validation-for="@Model.NumberofMonths"></span>
        </div>
        <div class="form-group">
            <label for="InitialPayment">InitialPayment</label>
            <input type="number" class="form-control" asp-for="@Model.InitialPayment">
            <span class="alert-danger" asp-validation-for="@Model.InitialPayment"></span>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit">Create</button>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const Message = document.getElementById("message");
    if (Message != undefined) {
        const message = Message.innerHTML;
        if (message != "") {
            Swal.fire(`${message}`)
        }

    }</script>