@using Kontakt.Core.Models;
@using Kontakt.Service.Responses;
@model MvcResponse<List<Comment>>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">ProductName</th>
                <th scope="col">Comment</th>
                <th scope="col">Rating</th>
                <th scope="col">IsVisible</th>
               
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {

                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.Name</th>
                    <th>@item.Email</th>
                    <th>@item.product.Name</th>
                    <th>@item.About</th>
                    @{
                        item.RatingLevel += 1;
                    }
                    <th>@item.RatingLevel</th>
                    @if (item.IsVisible)
                    {
                        <td><a asp-controller="comment" asp-action="visible" asp-route-id="@item.Id"><i style="color:green;" class="fa-solid fa-circle-check"></i></a></td>
                    }
                    else
                    {       
                    <td><a asp-controller="comment" asp-action="visible" asp-route-id="@item.Id"><i style="color:darkgray;" class="fa-solid fa-circle-check"></i></a></td>
                    }

                    <td><a onclick="if (!confirm('Are you sure to delete?')){return false;}" asp-controller="credit" asp-action="delete" asp-route-id="@item.Id" class="delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
            }
        </tbody>
    </table>


</div>