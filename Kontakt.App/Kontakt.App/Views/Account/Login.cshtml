@using Kontakt.App.ViewModels;
  @model LoginViewModel
    <!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>login</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form action="#" method="post">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                                <label asp-for="UserName">UserName</label>
                                <input type="text" class="form-control" asp-for="@Model.UserName">
                                <span class="alert-danger" asp-validation-for="UserName"></span>

                                <label asp-for="Password">Password</label>
                                <input type="password" class="form-control" asp-for="@Model.Password">
                                <span class="alert-danger" asp-validation-for="Password"></span>

                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" id="remember">
                                        <label for="remember">Remember me</label>
                                        <a href="~/account/forgetpassword">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end --> 