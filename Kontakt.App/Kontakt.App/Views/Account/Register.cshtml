@using Kontakt.App.ViewModels;
 @model RegisterViewModel
       <!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <form asp-action="register" asp-controller="account" method="post">
                                <label asp-for="Name">Name</label>
                                <input type="text" class="form-control" asp-for="@Model.Name">
                                <span class="alert-danger" asp-validation-for="Name"></span>

                                <label asp-for="Surname">Surname</label>
                                <input type="text" class="form-control" asp-for="@Model.Surname">
                                <span class="alert-danger" asp-validation-for="Surname"></span>

                                <label asp-for="Email">Email</label>
                                <input type="email" class="form-control" asp-for="@Model.Email">
                                <span class="alert-danger" asp-validation-for="Email"></span>

                                <label asp-for="UserName">UserName</label>
                                <input type="text" class="form-control" asp-for="@Model.UserName">
                                <span class="alert-danger" asp-validation-for="UserName"></span>

                                <label asp-for="Password">Password</label>
                                <input type="password" class="form-control" asp-for="@Model.Password">
                                <span class="alert-danger" asp-validation-for="Password"></span>

                                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                <input type="password" class="form-control" asp-for="@Model.ConfirmPassword">
                                <span class="alert-danger" asp-validation-for="ConfirmPassword"></span>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" asp-for="IsTerms" />
                                    <label class="form-check-label" asp-for="IsTerms">
                                        I agree all statements in <a href="#!">Terms of service</a>
                                    </label>
                                    <span class="text text-danger" asp-validation-for="IsTerms"></span>

                                </div>
                                
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" id="remember">
                                        <label for="remember">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end --> 