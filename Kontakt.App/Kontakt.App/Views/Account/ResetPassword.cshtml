@using Kontakt.App.ViewModels;
@model ResetPasswordViewModel
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Resset Password</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                        </div>
                        <div class="login-form">
                            <form action="#" method="post">


                                <div class="form-outline flex-fill mb-0">
                                    <input asp-for="Password" class="form-control" placeholder="Password" />
                                </div>
                                <span class="text text-danger" asp-validation-for="Password"></span>


                                <div class="form-outline flex-fill mb-0">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                </div>
                                <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>



                                <div class="button-box">
                                    <button type="submit" class="default-btn">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>